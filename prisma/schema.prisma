model Plugin {
  id                   String     @id @default(uuid())
  nombrePlugin         String     @unique
  createdAt            String     @map("created_at")
  horaAt               String     @map("hora_at")
  updatedAt            DateTime   @updatedAt
  isActive             Boolean    @default(true)
}

model Caracter {
  id             String     @id @default(uuid())
  nombreCaracter String
  createdAt      String     @map("created_at")
  horaAt         String     @map("hora_at")
  updatedAt      DateTime   @updatedAt
  isActive       Boolean    @default(true)
  historias      Historia[]
}

